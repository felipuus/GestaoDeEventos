<Window x:Class="GestaoDeEventos.telabuscacep"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestaoDeEventos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="telabuscacep" WindowStartupLocation="CenterScreen">

    <Grid Cursor="">
        <!-- Fundo com gradiente -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#4A69BD" Offset="0"/>
                <GradientStop Color="#6A89CC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="215*"/>

        </Grid.ColumnDefinitions>

        <!-- Título -->
        <TextBlock Text="Consulta de Endereço por CEP"
               Grid.ColumnSpan="4"
               FontSize="22"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="97,20,0,0" Grid.Column="6"/>

        <!-- Label CEP -->
        <Label Content="CEP:"
           Grid.Column="4"
           Foreground="White"
           FontWeight="SemiBold"
           HorizontalAlignment="Right"
           VerticalAlignment="Top"
           Margin="0,100,10,0"
           FontSize="16"/>

        <!-- Caixa de texto -->
        <TextBox x:Name="inforCep"
             VerticalAlignment="Top"
             Margin="90,100,16,0"
             Height="35"
             FontSize="14"
             Padding="5"
             Background="White"
             BorderBrush="Gray"
             BorderThickness="1" Grid.Column="4"
             KeyDown="inforCep_KeyDown" 
                 Grid.ColumnSpan="5"/>

        <!-- Botão Buscar -->
        <Button x:Name="buscarCep"
            Content="Buscar"
            Grid.Column="9"
            VerticalAlignment="Top"
            Margin="78,100,37,0"
            Height="35"
            Width="100"
            FontSize="14"
            FontWeight="Bold"
            Foreground="White"
            Background="#38ada9"
            BorderBrush="Transparent"
            Click="buscarCep_Click"
            Cursor="Hand"
            >
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#38ada9"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#079992"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Label endereço -->
        <Label Content="Endereço:"
           Grid.Column="2"
           Foreground="White"
           FontWeight="SemiBold"
           HorizontalAlignment="Right"
           VerticalAlignment="Top"
           Margin="0,160,10,0"
           FontSize="16" Grid.ColumnSpan="3"/>

        <!-- Resultado do endereço -->
        <Label x:Name="endereco"
           Grid.ColumnSpan="5"
           Content="Digite um CEP e clique em Buscar"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Margin="0,160,0,0"
           FontSize="14"
           Foreground="Black"
           Background="White"
           Padding="7"
           Width="400"
           Height="35"
           BorderBrush="Gray"
           BorderThickness="1" Grid.Column="5"/>

    </Grid>
</Window>
